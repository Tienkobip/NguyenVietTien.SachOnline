@{
    Layout = "~/Views/Shared/NguyenVietTien.Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>
    <style type="text/css">
        td{
            height: 40px;
        }
    </style>
</head>
<body>
    <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
    <h2 style="text-align:center;">ĐĂNG NHẬP</h2>
    <table align="center">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            if (Request.Cookies["TenDN"] != null && Request.Cookies["TenDN"] != null)
            {
                <tr>
                    <td>Tên đăng nhập:</td>
                    <td>
                        <input type="text" name="TenDN" value="@Request.Cookies["TenDN"].Value" />
                        @ViewData["Err1"]
                    </td>
                </tr>
                <tr>
                    <td>Mật khẩu:</td>
                    <td>
                        <input type="password" name="MatKhau" value="@Request.Cookies["MatKhau"].Value" />
                        @ViewBag.Err2
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.CheckBox("remember", isChecked: true)
                        <span style="font-style:italic">Nhớ thông tin đăng nhập</span>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>Tên đăng nhập:</td>
                    <td>
                        <input type="text" name="TenDN" />
                        @ViewData["Err1"]
                    </td>
                </tr>
                <tr>
                    <td>Mật khẩu:</td>
                    <td>
                        <input type="password" name="MatKhau" />
                        @ViewBag.Err2
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.CheckBox("remember", isChecked: false)
                        <span style="font-style:italic">Nhớ thông tin đăng nhập</span>
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td>
                    <input type="submit" name="Đăng nhập" />
                </td>
            </tr>
        }
    </table>
</body>
</html>
