@model NguyenVietTien.SachOnline.Models.Mail

@{
    ViewBag.Title = "Send Mail";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .email-form-container {
        max-width: 800px;
        margin: 60px auto;
        background: #fff;
        border-radius: 10px;
        padding: 30px 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

        .email-form-container h2 {
            font-weight: bold;
            font-size: 26px;
            color: #337ab7;
            margin-bottom: 30px;
            text-align: center;
        }

    .form-group i {
        width: 20px;
        margin-right: 10px;
        color: #337ab7;
    }

    .control-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 4px;
        box-shadow: none;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #5bc0de;
            box-shadow: 0 0 5px rgba(91, 192, 222, 0.5);
        }

    .btn-primary {
        background-color: #337ab7;
        border-color: #2e6da4;
        font-weight: bold;
        padding: 10px 25px;
        font-size: 16px;
    }

    .btn-default {
        padding: 10px 20px;
        font-size: 15px;
    }

    .btn i {
        margin-right: 6px;
    }
</style>

<div class="email-form-container">
    <h2><i class="fa fa-paper-plane"></i> Gửi Email</h2>

    <form action="/FileAndMail/SendMail" method="post" enctype="multipart/form-data" class="form-horizontal">

        <div class="form-group">
            <label class="col-sm-3 control-label">
                <i class="fa fa-user"></i> From:
            </label>
            <div class="col-sm-9">
                <input type="email" name="From" class="form-control" placeholder="Email người gửi" required />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">
                <i class="fa fa-envelope"></i> To:
            </label>
            <div class="col-sm-9">
                <input type="email" name="To" class="form-control" placeholder="Email người nhận" required />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">
                <i class="fa fa-info-circle"></i> Tiêu đề:
            </label>
            <div class="col-sm-9">
                <input type="text" name="Subject" class="form-control" placeholder="Tiêu đề email" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">
                <i class="fa fa-comment"></i> Nội dung:
            </label>
            <div class="col-sm-9">
                <textarea name="Notes" rows="4" class="form-control" placeholder="Nhập nội dung email..."></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">
                <i class="fa fa-paperclip"></i> File đính kèm:
            </label>
            <div class="col-sm-9">
                <input type="file" name="attachment" class="form-control" />
            </div>
        </div>

        <div class="form-group text-center" style="margin-top: 30px;">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-send"></i> Gửi Email
            </button>
            <button type="reset" class="btn btn-default">
                <i class="fa fa-refresh"></i> Xóa
            </button>
        </div>
    </form>
</div>