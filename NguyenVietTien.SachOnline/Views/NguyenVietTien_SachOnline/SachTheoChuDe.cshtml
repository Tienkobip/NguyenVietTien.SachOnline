
@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Shared/NguyenVietTien.Layout.cshtml";
}

<h2 class="text-center">SÁCH THEO CHỦ ĐỀ</h2>
<hr>
<div class="row text-center">
    @{ int a = 0; }

    @foreach (var sach in Model)
    {
        a++;
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6
             @if (a % 3 == 0)
             {
                 @:hidden-xs
             }
             ">

            <div class="thumbnail">
                <img src="~/Images/@sach.AnhBia" alt=" @sach.TenSach" class="img-responsive img-rounded imgbook">
                <div class="caption">
                    <h4 style="min-height:70px;">
                        <a href="@Url.Action("ChiTietSach", "NguyenVietTien_SachOnline", new { id = sach.MaSach })">@sach.TenSach</a>
                    </h4>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Add to Cart
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>