@model IEnumerable<NguyenVietTien.SachOnline.Models.SACH>
<!-- PHẦN SÁCH BÁN NHIỀU -->
@*<style>
    .imgsachbannhieu {
        transition: transform 0.9s ease;
    }

    .imgsachbannhieu:hover {
        transform: scale(1.3);
    }
</style>*@
<div class="container">
    <h2 class="text-center">SÁCH BÁN NHIỀU</h2>
    <hr>

    @{
        var left = Model.Take(3).ToList();
        var right = Model.Skip(3).Take(3).ToList();
    }

    <div class="row">
    
        <div class="col-lg-6 col-md-6">
            <div class="media-object-default">
                @foreach (var sachBanNhieu in left)
                {
                    <div class="media">
                        <div class="media-left">
                            <a href="#"><img class="media-object imgsachbannhieu" src="~/Images/@sachBanNhieu.AnhBia" alt="placeholder image"></a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@sachBanNhieu.TenSach</h4>
                            @sachBanNhieu.MoTa.Substring(0, Math.Min(200, sachBanNhieu.MoTa.Length))...
                        </div>
                    </div>
                }
            </div>
        </div>
    

        <div class="col-lg-6 col-md-6">
            <div class="media-object-default">
                @foreach (var sachBanNhieu in right)
                {
                    <div class="media">
                        <div class="media-left">
                            <a href="#"><img class="media-object imgsachbannhieu" src="~/Images/@sachBanNhieu.AnhBia" alt="placeholder image"></a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@sachBanNhieu.TenSach</h4>
                            @sachBanNhieu.MoTa.Substring(0, Math.Min(200, sachBanNhieu.MoTa.Length))...
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <hr>
</div>