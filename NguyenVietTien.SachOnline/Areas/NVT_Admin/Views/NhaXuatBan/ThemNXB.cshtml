@model NguyenVietTien.SachOnline.Models.NHAXUATBAN

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Thêm Nhà Xuất Bản</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("ThemNXB", "NhaXuatBan", FormMethod.Post, new { @class = "needs-validation" }))
                        {
                            <div class="form-group mb-3">
                                <label for="tenNXB">Tên nhà xuất bản</label>
                                <input type="text" name="tenNXB" id="tenNXB" class="form-control" required />
                            </div>

                            <div class="form-group mb-3">
                                <label for="dcNXB">Địa chỉ nhà xuất bản</label>
                                <input type="text" name="dcNXB" id="dcNXB" class="form-control" required />
                            </div>

                            <div class="form-group mb-3">
                                <label for="dtNXB">Điện thoại nhà xuất bản</label>
                                <input type="text" name="dtNXB" id="dtNXB" class="form-control" required />
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-plus-circle"></i> Thêm
                                </button>
                                <button type="reset" class="btn btn-secondary">
                                    <i class="bi bi-arrow-counterclockwise"></i> Reset
                                </button>
                            </div>
                        }
                    </div>
                    <div class="card-footer text-center">
                        @Html.ActionLink("⬅️ Quay lại danh sách", "Index", null, new { @class = "btn btn-link" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
