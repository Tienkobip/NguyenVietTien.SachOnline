@model NguyenVietTien.SachOnline.Models.NHAXUATBAN

@{
    ViewBag.Title = "Sửa Nhà Xuất Bản";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-warning">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title">SỬA NHÀ XUẤT BẢN</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("SuaNXB", "NhaXuatBan", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.MaNXB)

                            <div class="form-group">
                                @Html.LabelFor(model => model.TenNXB, new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.TenNXB, new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DiaChi, new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DienThoai, new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success">
                                    <i class="glyphicon glyphicon-floppy-disk"></i> Lưu
                                </button>
                                @Html.ActionLink("⬅️ Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
