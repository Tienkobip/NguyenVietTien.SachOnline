@model NguyenVietTien.SachOnline.Models.NHAXUATBAN

@{
    ViewBag.Title = "Chi Tiết Nhà Xuất Bản";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-primary">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title">CHI TIẾT NHÀ XUẤT BẢN</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>Mã NXB</th>
                                <td>@Html.DisplayFor(model => model.MaNXB)</td>
                            </tr>
                            <tr>
                                <th>Tên NXB</th>
                                <td>@Html.DisplayFor(model => model.TenNXB)</td>
                            </tr>
                            <tr>
                                <th>Địa chỉ</th>
                                <td>@Html.DisplayFor(model => model.DiaChi)</td>
                            </tr>
                            <tr>
                                <th>Điện thoại</th>
                                <td>@Html.DisplayFor(model => model.DienThoai)</td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-footer text-center">
                        @Html.ActionLink("✏️ Sửa", "SuaNXB", new { id = Model.MaNXB }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("⬅️ Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>